    // Função para verificar se o usuário está logado (isAuthenticated).
    function isAuthenticated() {
        // Aqui, você deve implementar a lógica para verificar se o usuário está logado.
        // Pode ser por meio de cookies, sessões, tokens JWT, etc.
        // Retorne true se o usuário estiver logado e false caso contrário.
        return false; // Altere esta lógica conforme necessário.
    }

    // Função para lidar com o clique no botão.
    function handleActivityButtonClick() {
        if (isAuthenticated()) {
            // Se o usuário estiver logado, redirecione-o para a página de atividade.
            window.location.href = "./index.html"; // Altere o nome do arquivo conforme necessário.
        } else {
            // Se o usuário não estiver logado, redirecione-o para a página de login.
            window.location.href = "login.html"; // Altere o nome do arquivo conforme necessário.
        }
    }

    // Adicione um evento de clique aos botões com a classe "activity-button".
    const activityButtons = document.querySelectorAll(".activity-button");
    activityButtons.forEach(button => {
        button.addEventListener("click", handleActivityButtonClick);
    });


