<%- include('./layout/header') %>
<%- include('./layout/navbar') %>
   
    <main class="main-base">
        <figure class="figure-main">
            <img src="./img/Boy2.svg" alt="Garoto estudando em cima dos livros.">
        </figure>
        <article class="article-login">
            <header>
                <h1>
                    Login
                </h1>
               
            </header>

            <form action="./index" method="POST">

                <fieldset>
                    <legend>Email:</legend>
                    <label for="email" class="material-icons">
                        email
                    </label>
                    <input type="email" id="email" name="email" placeholder="Digite seu e-mail." required>
                </fieldset>

                <fieldset>
                    <legend>Senha:</legend>
                    <label for="senha" class="material-icons">
                        lock
                    </label>
                    <input type="password" id="senha" name="senha" placeholder="Digite sua senha." required>
                </fieldset>

                <button type="submit">Entrar</button>

            </form>
            <footer class="article-login-footer">
                <p><a href="./esqueceu_senha">Esqueceu a senha?</a> ou <a href="./cadastro">NÃ£o tem cadastro?</a></p>
            </footer>
        </article>
    </main>
     
